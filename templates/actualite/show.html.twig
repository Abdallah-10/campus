{% extends 'admin/index.html.twig' %}

{% block title %}Formation{% endblock %}

{% block content %}

    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ actualite.description }}</td>
            </tr>
            <tr>
                <th>Langue</th>
                <td>{{ actualite.langue }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('assets/uploads/') }}{{ actualite.image }}" alt="Client Images" width="80px" ></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
            </tr>
            
        </tbody>
    </table>
   <a class="btn btn-warning waves-effect waves-light "  href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">Modifier</a>

