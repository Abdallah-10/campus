{% extends 'admin/index.html.twig' %}

{% block title %}User index{% endblock %}

{% block content %}



    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h1>Liste des utilisateurs</h1><br>
                    <a class="btn btn-primary waves-effect waves-light" href="{{ path('app_user_new') }}" style="width: 20%;">Ajouter un utilisateur</a></div>


                <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100" >
                    <thead>
                    <tr>
                        <th>Nom et Prénom</th>
                        <th>Email</th>
                   
                        <th>Gouvernorat </th>
                        <th>Ministère</th>
                        <th>Organisme</th>
                        <th>Actions</th>
                    </tr>
                    </thead>


                    <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>

                        <td>{{ user.gouvernat }}</td>
                        <td>{{ user.ministere }}</td>
                        <td>{{ user.organisme }}</td>
                        <td>
                            <a class="btn btn-secondary waves-effect waves-light" href="{{ path('app_user_show', {'id': user.id}) }}">Voir</a>
                            <a class="btn btn-warning waves-effect waves-light" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
                        </td>
                    </tr>
     
                    {% endfor %}
                    
                    </tbody>
                </table>

            </div>
        </div>
    </div> <!-- end col -->


<style>
div#datatable_wrapper {
    padding: 25px;
}
</style>
{% endblock %}
