{% extends 'admin/index.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block content %}
    <div class="col-12">
		<div class="card">
			<div class="card-body">

				<h2 >Liste des Ministères</h2><br>
                <a class="btn btn-primary waves-effect waves-light" href="{{ path('app_ministere_new') }}" style="width: 20%;">Ajouter une Ministère</a></div>

				<table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom (fr)</th>
                <th>Nom (ar)</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ministere in ministeres %}
            <tr>
                <td>{{ ministere.id }}</td>
                <td>{{ ministere.name }}</td>
                <td>{{ ministere.nameAr }}</td>
                <td>
                    <a class="btn btn-secondary waves-effect waves-light" href="{{ path('app_ministere_show', {'id': ministere.id}) }}">show</a>
                    <a class="btn btn-warning waves-effect waves-light " href="{{ path('app_ministere_edit', {'id': ministere.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
