{% extends 'admin/index.html.twig' %}

{% block title %}Formation index{% endblock %}

{% block content %}
    <div class="col-12">
		<div class="card">
			<div class="card-body">

				<h2 >Liste des Formations</h2><br>
                <a class="btn btn-primary waves-effect waves-light" href="{{ path('app_formation_new') }}" style="width: 20%;">Ajouter une formation</a></div>

				<table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
					<thead>
					<tr>
						<th>Titre</th>
						<th>Lien</th>
						<th>Durée</th>
						<th>Date début</th>
						<th>Date fin</th>
						<th>Type</th>
						<th >Actions</th>
					</tr>
					</thead>


					<tbody>
					 {% for formation in formations %}
							<tr>
								
								<td>{{ formation.title }}</td>
								<td>{{ formation.link }}</td>
								<td>{{ formation.duration }}</td>
								<td>{{ formation.dateStart ? formation.dateStart|date('d-m-Y') : '' }}</td>
								<td>{{ formation.dateEnd ? formation.dateEnd|date('d-m-Y') : '' }}</td>
								<td>{{ formation.type }}</td>
								<td>
									<a class="btn btn-secondary waves-effect waves-light" href="{{ path('app_formation_show', {'id': formation.id}) }}">Voir</a>
									<a class="btn btn-warning waves-effect waves-light " href="{{ path('app_formation_edit', {'id': formation.id}) }}">Modifier</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="14">no records found</td>
							</tr>
						{% endfor %}
			   
					</tbody>
				</table>

			</div>
		</div>
	</div> <!-- end col -->
 
<style>
div#datatable_wrapper {
    padding: 25px;
}
</style>                    
{% endblock %}
